AppId={{2A516438-9675-40B5-AE5B-D94756F3CACC}
AppName=Karasunpo
AppVerName=Karasunpo 0.9
AppPublisher=Katayama Hirofumi MZ
AppPublisherURL=http://katahiromz.web.fc2.com/
AppSupportURL=http://katahiromz.web.fc2.com/
